{% extends 'base.html.twig' %}

{% block title %}Список сеансов{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .film-container { margin-bottom: 20px; }
        .button { font-size: large }
        .number_of_seats { font-weight: bold }
    </style>

    <div class="example-wrapper">

        {{ include('/film_session/banner/_banner.html.twig') }}

        <h1>Список сеансов</h1>

        {% for filmSession in filmSessions %}
            <div class="film-container">
                <h2>{{ filmSession.filmTitle }}</h2>
                <ul>
                    <li>Дата сеанса: {{ filmSession.filmStartAt|date('Y.m.d') }}</li>
                    <li>Время начала: {{ filmSession.filmStartAt|date('H:i') }}</li>
                    <li>Время окончания: {{ filmSession.FilmEndAt|date('H:i') }}</li>
                </ul>
                <p class="number_of_seats">Кол-во свободных мест: {{ filmSession.countOfTicketsAvailable }}</p>

                <a href="{{ path('film_session', { id: filmSession.filmSessionId }) }}"><button class="button">Выбрать</button></a>

            </div>
        {% endfor %}
    </div>
{% endblock %}
